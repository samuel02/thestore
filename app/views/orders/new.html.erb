<div class="page-header">
  <h1>Checkout</h1>
  <p class="lead">
    Fill in your details and we'll do our best to deliver your stuff as soon as possible!
  </p>
</div>

<div class="row">
  <div class="span6">
    <%= render :partial => 'form' %>
  </div>
  <div class="span6">
      <h3 style="margin-top:0px">Order summary</h3>
      <% if @cart.line_items.size > 0 %>
        <table class="table table-striped table-condensed">
          <tr>
            <th>Product</th>
            <th>Amount</th>
            <th>Price</th>
          </tr>
          <% @cart.line_items.each do |line_item| %>
            <tr>
              <td><%= line_item.product.name %></td>
              <td><%= line_item.amount %></td>
              <td><%= number_to_currency(line_item.price) %></td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td><strong>Total</strong></td>
            <td><%= number_to_currency(@cart.total_price) %></td>
          </tr>
        </table>
      <% else %>
        <p>No products in cart, add a product!</p>
      <% end %>
  </div>
</div>