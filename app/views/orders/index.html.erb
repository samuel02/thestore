<div class="page-header">
  <h1>Orders</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Adress</th>
      <th>Postal code</th>
      <th>City</th>
      <th>Items</th>
      <th>Total price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= "#{order.customer.first_name} #{order.customer.last_name}" %></td>
        <td><%= order.customer.email %></td>
        <td><%= order.customer.address %></td>
        <td><%= order.customer.postal_code %></td>
        <td><%= order.customer.city %></td>
        <td><%= order.line_items.count %></td>
        <td><%= number_to_currency(order.total_price) %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to raw("<i class=\"icon-eye-open\"></i>"),
                      order_path(order), :class => 'btn btn-mini' %>
            <%= link_to raw("<i class=\"icon-pencil\"></i>"),
                      edit_order_path(order), :class => 'btn btn-mini' %>
            <%= link_to raw("<i class=\"icon-remove\"></i>"),
                      order_path(order),
                      :method => :delete,
                      :data => { :confirm => 'Are you sure?' },
                      :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>