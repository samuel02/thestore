<div class="page-header">
  <h1>Welcome to The Store!</h1>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="span2">
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <div class="actions">
        <a class="btn btn-primary">Add to cart</a>
      </div>
    </div>
  <% end %>
</div>
