<div class="page-header">
  <h1><%= "#{@customer.first_name} #{@customer.last_name}" %> <small>My account</small></h1>
</div>

<div class="row">
  <div class="span6">
    <h3 style="margin-top:0px">Update account</h3>
    <%= form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>
      <fieldset>
        <div class="control-group">
          <%= f.label :first_name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :first_name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :last_name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :last_name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :address, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :address, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :postal_code, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :postal_code, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :city, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :city, :class => 'text_field' %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Update account", :class => 'btn btn-primary' %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="span6">
    <h3 style="margin-top:0px;">Placed orders</h3>
    <% if @orders.any? %>
      <table class="table table-striped">
        <tr>
          <th>Date</th>
          <th>Items</th>
          <th>Price</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.in_time_zone %></td>
          <td><%= order.line_items.count %></td>
          <td><%= number_to_currency order.total_price %></td>
        </tr>
        <% end %>
      </table>
    <% else %>
      <p>You haven't placed any orders yet, go shopping!</p>
    <% end %>
  </div>
</div>